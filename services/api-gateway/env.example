SERVICE_NAME=api-gateway
SERVICE_PORT=8000
SERVICE_VERSION=1.0.0
NODE_ENV=development
LOG_LEVEL=debug
JWT_SECRET=your-super-secret-jwt-key-development-change-in-production
JWT_EXPIRE_TIME=7d
JWT_REFRESH_EXPIRE_TIME=30d
SESSION_SECRET=your-session-secret-key-development
SESSION_MAX_AGE=86400000
USER_SERVICE_URL=http://localhost:8001
USER_SERVICE_TIMEOUT=30000
ARTICLE_SERVICE_URL=http://localhost:8002
ARTICLE_SERVICE_TIMEOUT=30000
FEED_SERVICE_URL=http://localhost:8003
FEED_SERVICE_TIMEOUT=15000
INGESTION_SERVICE_URL=http://localhost:8004
INGESTION_SERVICE_TIMEOUT=60000
RANKING_SERVICE_URL=http://localhost:8005
RANKING_SERVICE_TIMEOUT=45000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
AUTH_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX_REQUESTS=1000
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_BODY_PARSER_SECURITY=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics
ENABLE_REQUEST_LOGGING=true
REQUEST_LOG_FORMAT=combined
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
ENABLE_SERVICE_DISCOVERY=false
CONSUL_URL=http://localhost:8500
LOAD_BALANCE_STRATEGY=round-robin
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs
API_DOCS_TITLE=Zim News Aggregator API
API_DOCS_VERSION=1.0.0
ENABLE_DEBUG_ROUTES=true
ENABLE_PLAYGROUND=true
ENABLE_MOCK_RESPONSES=false
WATCH_FILES=true
AUTO_RESTART=true 